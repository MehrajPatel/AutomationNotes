#Java need to be installed and configured before this installation

wget http://mirrors.estointernet.in/apache/maven/maven-3/3.6.3/binaries/apache-maven-3.6.3-bin.zip
unzip apache-maven-3.6.3-bin.zip

cd apache-maven-3.6.3
export M2_HOME=`pwd`
export M2=$M2_HOME/bin
export PATH=$M2:$PATH


#Apache tomcat installation

cd /tmp
wget http://www-us.apache.org/dist/tomcat/tomcat-7/v7.0.99/bin/apache-tomcat-7.0.99.tar.gz
tar xzf apache-tomcat-7.0.99.tar.gz
mv apache-tomcat-7.0.99 /usr/local/tomcat7
cd /usr/local/tomcat7

#change port from 8080 to anyport required and restart the server

vi /usr/local/tomcat7/conf/server.xml
./bin/shutdown.sh && ./bin/startup.sh
